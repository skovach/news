@page
@model News.Api.Pages.IndexModel
@{
    ViewData["Title"] = "Home Page";
}

<div class="container article-list">
    @foreach (var article in Model.Articles)
    {
        <div class="article-item">
            <div class="article-image">
                @* <img src="@article.ImageUrl" alt="Image for @article.Title" style="width:100%; height:auto; border-radius:5px;"> *@
                <img src="~/images/1.webp" alt="Image for @article.Title" style="width:100%; height:auto; border-radius:5px;">
            </div>
            
            <h5 class="article-title">
                <a href="/Article/@article.Id" class="article-link">@article.Title</a>
            </h5>

            <p class="article-author">By @article.AuthorName</p>
            
            <p class="article-content">@article.Content</p>
            
            <div class="article-meta text-right">
                <p class="article-date">@article.PublishedDate.ToString("MMMM dd, yyyy")</p>
            </div>
        </div>
    }
</div>
