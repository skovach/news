@page "{id:int}"
@model ArticleModel
@{
    ViewData["Title"] = "Article Details";
}

<div class="article-page-container">
    <div class="article-image">
        <img src="@Model.Article.ImageUrl" alt="Image for @Model.Article.Title" style="max-width:100%; height:auto; border-radius:5px; display:block; margin:auto;">
    </div>
    <div class="article-details">
        <h2 class="article-title">@Model.Article.Title</h2>
        <!-- Author and Published Date -->
        <p class="article-meta">
            <small>Category: @Model.Article.Category | By @Model.Article.AuthorName | Published: @Model.Article.PublishedDate.ToString("MMM dd, yyyy")</small>
        </p>
        <p class="article-content">@Model.Article.Content</p>
    </div>
</div>